<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.miscjunk.droidjam"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.miscjunk.droidjam.MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.miscjunk.droidjam.LobbyActivity"
            android:label="@string/title_activity_lobby" >
        </activity>
        <activity
            android:name="net.miscjunk.droidjam.JoinBandActivity"
            android:label="@string/title_activity_join_band"
            android:parentActivityName="net.miscjunk.droidjam.MenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.miscjunk.droidjam.MenuActivity" />
        </activity>
        <activity
            android:name="net.miscjunk.droidjam.OneNoteSambaActivity"
            android:label="@string/title_activity_one_note_samba" >
        </activity>
        <activity
            android:name="net.miscjunk.droidjam.InstrumentActivity"
            android:label="@string/title_activity_instrument"
            android:parentActivityName="net.miscjunk.droidjam.MenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.miscjunk.droidjam.MenuActivity" />
        </activity>
        <activity
            android:name="net.miscjunk.droidjam.StartBandActivity"
            android:label="@string/title_activity_start_band"
            android:parentActivityName="net.miscjunk.droidjam.MenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.miscjunk.droidjam.MenuActivity" />
        </activity>
    </application>

</manifest>